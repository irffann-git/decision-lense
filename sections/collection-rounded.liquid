<section class="circle-banner py-8">
  <div class="circle-container ml-3">

    <div class="circle-list py-10  px-5">

      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="circle-item">

          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 300 }}"
              width=""
              height=""
              alt="{{ block.settings.title }}">
          {% else %}
            {{ 'image' | placeholder_svg_tag }}
          {% endif %}

          <span class="circle-title" style="font-family: {{ block.settings.font_family }}; color: {{ block.settings.font_color }};">
            {{ block.settings.title }}
          </span>

        </a>
      {% endfor %}

    </div>

  </div>
</section>


<style>
  .circle-container {
    max-width: 1500px;
  }

  .circle-list {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    gap: 20px;
    overflow: hidden;

  }
  .circle-item {
    flex: 1;
    max-width: 190px;
    text-align: center;
  }
  .circle-item img {
    width: 100%;
    height: auto;
    transition: transform 0.3s;
  }

  .circle-item img:hover {
    transform: scale(1.05);
  }
  .circle-title {
    display: block;
    margin-top: 8px;
    font-size: 14px;
    font-weight: 600;
    white-space: nowrap;
  }
  @media (max-width: 1100px) {
    .circle-list {
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      gap: 16px;
      padding-left: 10px;
    }

    .circle-list::-webkit-scrollbar {
      display: none;
    }

    .circle-item {
      flex: 0 0 180px;
      scroll-snap-align: start;
    }
  }


</style>

{% schema %}
  {
    "name": "Collection Circle Banner",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Shop by Collections"
      }
    ],
    "blocks": [
      {
        "type": "collection_item",
        "name": "Collection item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Circle Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Collection name"
          },
          {
            "type": "color",
            "id": "font_color",
            "label": "Text color",
            "default": "#6F6F6F"
          },
          {
            "type": "select",
            "id": "font_family",
            "label": "Font Family",
            "options": [
              {
                "value": "Outfit",
                "label": "Outfit"
              },
              {
                "value": "Poppins",
                "label": "Poppins"
              },
              {
                "value": "Inter",
                "label": "Inter"
              },
              {
                "value": "Roboto",
                "label": "Roboto"
              }, {
                "value": "Montserrat",
                "label": "Montserrat"
              }, {
                "value": "Lato",
                "label": "Lato"
              }
            ],
            "default": "Outfit"
          }, {
            "type": "url",
            "id": "link",
            "label": "Collection Link"
          }
        ]
      }
    ],
    "max_blocks": 12,
    "presets": [
      {
        "name": "Collection Circle Banner",
        "blocks": [
          {
            "type": "collection_item"
          }, {
            "type": "collection_item"
          }, {
            "type": "collection_item"
          }
        ]
      }
    ]
  }
{% endschema %}