<div class="collection-list-wrapper">
  <h1 class="collection-list-title">{{ section.settings.title }}</h1>

  <div class="max-w-6xl mx-auto my-3">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {% for collection in collections %}
        {% if collection.all_products_count > 0 %}
          <div class="w-full py-6 px-3">
            <div class="border rounded-md bg-white overflow-hidden">
              <a href="{{ collection.url }}">
                <div class="collection-card-image">
                  {% if collection.featured_image != blank %}
                    {% assign collection_image = collection.featured_image %}
                  {% else %}
                    {% assign collection_image = collection.products.first.image %}
                  {% endif %}

                  <img
                    src="{{ collection_image | img_url: 'medium' }}"
                    width=""
                    height=""
                    alt="{{ collection.title | escape }}">
                </div>
              </a>

              <div class="collection-card-title">
                <h2 class="text-xl">{{ collection.title }}</h2>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Template List Collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Collections",
        "label": "Title"
      }
    ]
  }
{% endschema %}


<style>
  /* ===============================
   COLLECTION LIST PAGE STYLES
   =============================== */

.collection-list-wrapper {
  padding: 40px 16px;
}

/* Section title */
.collection-list-title {
  font-size: 32px;
  font-weight: 600;
  text-align: center;
  margin-bottom: 24px;
  color: #111827;
}

/* Grid card */
.collection-card {
  overflow: hidden;
  background: #ffffff;
  border: 1px solid #e5e7eb;
  transition: transform 0.35s ease, box-shadow 0.35s ease;
}

.collection-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 18px 35px rgba(0,0,0,0.12);
}

/* Image wrapper */
.collection-card-image {
  height: 320px;
  overflow: hidden;

}

.collection-card-image img {
  width: 100%;
  height: 100%;
  object-fit: fill;
  transition: transform 0.8s ease;
}

.collection-card:hover img {
  transform: scale(1.08);
}

/* Title box */
.collection-card-title {
  padding: 14px;
  background: #f9fafb;
  text-align: center;
}

.collection-card-title h2 {
  font-size: 18px;
  font-weight: 600;
  color: #111827;
  margin: 0;
}

/* ===============================
   RESPONSIVE
   =============================== */

/* Tablet */
@media (max-width: 1024px) {
  .collection-card-image {
    height: 260px;
  }
}

/* Mobile */
@media (max-width: 640px) {
  .collection-list-title {
    font-size: 24px;
  }

  .collection-card-image {
    height: 220px;
  }
}

</style>