        "type": "color",
        "id": "theme_color",
        "label": "theme color",
        "default": "#C77632"

      },
      {
        "type": "text",
        "id": "welcome_title",
        "label": "Welcome title",
        "default": "Welcome,"
      },
      {
        "type": "text",
        "id": "address_title",
        "label": "Address title",
        "default": "Shipping Address"
      },
      {
        "type": "text",
        "id": "address_button",
        "label": "Address button text",
        "default": "Edit Address"
      }, {
        "type": "text",
        "id": "accountinfo_title",
        "label": "Account info title",
        "default": "Account Information"
      }, {
        "type": "text",
        "id": "orders_title",
        "label": "Orders section title",
        "default": "My Orders"
      }, {
        "type": "text",
        "id": "view_order_button",
        "label": "View order button",
        "default": "View Order"
      }, {
        "type": "text",
        "id": "logout_button",
        "label": "Logout button text",
        "default": "Log Out"
      }
    ],
    "presets": [
      {
        "name": "Account Page"
      }
    ]
  }
{% endschema %}