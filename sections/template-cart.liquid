{% if cart.item_count > 0 %}

<section class="cart-section">
  <div class="cart-container">

    <!-- Header -->
    <div class="cart-header">
      <h1 class="cart-title">Your Cart</h1>
      <a href="{{ routes.all_products_collection_url }}" class="continue-link">
        Continue Shopping →
      </a>
    </div>

    <form
      action="{{ routes.cart_url }}"
      method="POST"
      novalidate
      class="cart-layout">

      <!-- Cart Items -->
      <div class="cart-items">

        {% for item in cart.items %}
          <div class="cart-item">

            <a href="{{ item.url }}">
              {% if item.image %}
                <img
                  src="{{ item.image | image_url: width: 240, height: 240 }}"
                  alt="{{ item.title }}"
                  class="cart-item-image"width="" height="">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'cart-item-image' }}
              {% endif %}
            </a>

            <div class="cart-item-content">
              <div>
                <a href="{{ item.url }}" class="cart-item-title">
                  {{ item.product.title }}
                </a>
                <p class="cart-item-variant">{{ item.variant.title }}</p>
              </div>

              <div class="cart-item-row">
                <input
                  type="number"
                  name="updates[]"
                  value="{{ item.quantity }}"
                  min="1"
                  class="cart-qty">

                <p class="cart-item-price">
                  {{ item.line_price | money }}
                </p>
              </div>

              <a
                href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
                class="cart-remove">
                Remove
              </a>
            </div>

          </div>
        {% endfor %}

        <textarea
          name="note"
          placeholder="Order notes"
          class="cart-note"></textarea>

      </div>

      <!-- Summary -->
      <div class="cart-summary">
        <h2 class="summary-title">Order Summary</h2>

        <div class="summary-row">
          <span>Subtotal:</span>
          <span>{{ cart.total_price | money }}</span>
        </div>

        <button
          type="submit"
          name="update"
          class="btn-outline">
          Update Cart
        </button>

        <button
          type="submit"
          name="checkout"
          class="btn-primary">
          Checkout →
        </button>
      </div>

    </form>
  </div>
</section>

{% else %}

<section class="empty-cart">
  <div>
    <h1>Your cart is empty</h1>
    <a href="{{ routes.all_products_collection_url }}" class="btn-primary">
      Continue Shopping
    </a>
  </div>
</section>

{% endif %}



<style>
  /* layout */
.cart-section {
  padding: 40px 16px;
  background: #fff;
}

.cart-container {
  max-width: 1200px;
  margin: auto;
}

.cart-layout {
  display: flex;
  gap: 32px;
}

.cart-items {
  flex: 2;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

/* header */
.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32px;
}

.cart-title {
  font-size: 36px;
  font-weight: 800;
  color: #111;
}

.continue-link {
  font-weight: 600;
  color: #ca8a04;
  text-decoration: none;
}

.continue-link:hover {
  color: #000;
}

/* cart item */
.cart-item {
  border: 2px solid #e5e7eb;
  border-radius: 16px;
  padding: 16px;
  display: flex;
  gap: 16px;
}

.cart-item-image {
  width: 96px;
  height: 96px;
  object-fit: cover;
  border-radius: 12px;
  border: 1px solid #ddd;
}

.cart-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cart-item-title {
  font-size: 18px;
  font-weight: 600;
  color: #111;
  text-decoration: none;
}

.cart-item-title:hover {
  text-decoration: underline;
}

.cart-item-variant {
  font-size: 14px;
  color: #6b7280;
}

/* qty + price */
.cart-item-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8px;
}

.cart-qty {
  width: 80px;
  padding: 8px;
  border-radius: 6px;
  border: 1px solid #ddd;
}

.cart-item-price {
  font-size: 18px;
  font-weight: 600;
  color: #1f2937;
}

/* remove */
.cart-remove {
  font-size: 14px;
  font-weight: 500;
  color: #ef4444;
  text-decoration: none;
  margin-top: 6px;
}

.cart-remove:hover {
  text-decoration: underline;
}

/* note */
.cart-note {
  width: 100%;
  height: 100px;
  border-radius: 12px;
  border: 1px solid #ddd;
  padding: 12px;
}

/* summary */
.cart-summary {
  flex: 1;
  border: 2px solid #ca8a04;
  border-radius: 16px;
  padding: 24px;
  height: fit-content;
  position: sticky;
  top: 20px;
  background: #fff;
  box-shadow: 0 10px 25px rgba(0,0,0,.08);
}

.summary-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 16px;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 24px;
}

/* buttons */
.btn-outline {
  width: 100%;
  padding: 12px;
  margin-bottom: 12px;
  border-radius: 8px;
  border: 2px solid #ca8a04;
  background: #fff;
  font-weight: 600;
  cursor: pointer;
}

.btn-outline:hover {
  background: #ca8a04;
  color: #000;
}

.btn-primary {
  width: 100%;
  padding: 12px;
  border-radius: 8px;
  background: #ca8a04;
  border: none;
  font-weight: 600;
  cursor: pointer;
}

.btn-primary:hover {
  background: #000;
  color: #ca8a04;
}

/* empty cart */
.empty-cart {
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.empty-cart h1 {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 24px;
}

@media (max-width: 1024px) {

  .cart-layout {
    flex-direction: column;
    gap: 28px;
  }

  .cart-title {
    font-size: 30px;
  }

  .cart-item {
    padding: 14px;
  }

  .cart-item-image {
    width: 88px;
    height: 88px;
  }

  .cart-summary {
    position: relative; /* sticky off on tablet */
    top: auto;
    box-shadow: none;
  }

  .summary-title {
    font-size: 22px;
  }

  .summary-row {
    font-size: 16px;
  }

  .btn-outline,
  .btn-primary {
    padding: 14px;
    font-size: 15px;
  }
}
@media (max-width: 767px) {

  /* Header */
  .cart-header {
    flex-direction: row;
    gap: 10px;
    align-items: flex-start;
  }

  .cart-title {
    font-size: 24px;
  }

  .continue-link {
    font-size: 14px;
    margin-top:6px;
  }

  /* Cart layout */
  .cart-layout {
    gap: 24px;
  }

  /* Cart item → CARD STYLE */
  .cart-item {
    flex-direction: column;
    padding: 14px;
    border-radius: 18px;
  }

  .cart-item-image {
    width: 100%;
    height: 180px;
    object-fit: contain;
    border-radius: 12px;
    background: #f9fafb;
  }

  .cart-item-content {
    width: 100%;
    gap: 10px;
    margin-top: 6px;
  }

  .cart-item-title {
    font-size: 16px;
    line-height: 1.3;
  }

  .cart-item-variant {
    font-size: 13px;
  }

  /* Quantity + price inline */
  .cart-item-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .cart-qty {
    width: 64px;
    padding: 6px;
  }

  .cart-item-price {
    font-size: 16px;
  }

  .cart-remove {
    font-size: 13px;
    align-self: flex-start;
  }

  /* Note */
  .cart-note {
    height: 80px;
    font-size: 14px;
  }

  /* Summary → separate card */
  .cart-summary {
    position: relative;
    top: auto;
    border-radius: 18px;
    padding: 18px;
    box-shadow: none;
  }

  .summary-title {
    font-size: 18px;
  }

  .summary-row {
    font-size: 15px;
  }

  .btn-outline,
  .btn-primary {
    font-size: 15px;
    padding: 14px;
  }

  /* Empty cart */
  .empty-cart h1 {
    font-size: 22px;
  }
}



</style>



{% schema %}
{
  "name": "Template Cart",
  "blocks": [
    { "type": "subtotal", "name": "Subtotal", "limit": 1 },
    { "type": "update_button", "name": "Update Button", "limit": 1 },
    { "type": "checkout_button", "name": "Checkout Button", "limit": 1 }
  ]
}
{% endschema %}

