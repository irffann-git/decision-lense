<div class="announcement-bar" style="background-color: {{ section.settings.announsment_bg_color }};">
  <p class="announcement-text">
    {{ section.settings.announsmenu_text }}
    <a href="{{ section.settings.announsmenu_url }}" class="announcement-link">
      {{ section.settings.link_text }}
    </a>
  </p>
</div>


<style>
  .announcement-bar {
    width: 100%;
    height: 40px;
    padding: 8px 16px;
    display: flex;
    background-color: red;
    justify-content: center;
  }

  .announcement-text {
    font-weight: 400;
    font-size: 11px;
    /* auto responsive */
    text-align: center;
    font-family: {{ section.settings.font_family }};
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0;
  }

  .announcement-link {
    color: {{ section.settings.link_color }};
    margin-left: 6px;
    text-decoration: underline;
    font-weight: 500;
    font-family: {{ section.settings.font_family }};
    transition: color 0.3s ease;
  }

  .announcement-link:hover {
    color: blue;
  }

  /* Responsive text sizes */
  @media (min-width: 640px) {
    .announcement-text {
      font-size: 11px;
    }
  }

  @media (min-width: 768px) {
    .announcement-text {
      font-size: 13px;
    }
  }
</style>


{% schema %}
  {
    "name": "Announsment Bar",
    "settings": [
      {
        "type": "color",
        "id": "announsment_bg_color",
        "label": "Baground color",
        "default": "#F6EBDC"
      },
      {
        "type": "text",
        "id": "announsmenu_text",
        "label": "anounsment text",
        "default": "2-Day Delivery - Get your glasses faster!"
      },
      {
        "type": "select",
        "id": "font_family",
        "label": "Font Family",
        "options": [
          {
            "value": "Outfit",
            "label": "Outfit"
          },
          {
            "value": "Poppins",
            "label": "Poppins"
          },
          {
            "value": "Inter",
            "label": "Inter"
          },
          {
            "value": "Roboto",
            "label": "Roboto"
          }, {
            "value": "Montserrat",
            "label": "Montserrat"
          }, {
            "value": "Lato",
            "label": "Lato"
          }
        ],
        "default": "Outfit"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "URL text",
        "default": "Shop now"
      }, {
        "type": "url",
        "id": "announsmenu_url",
        "label": "link url"

      }, {
        "type": "color",
        "id": "link_color",
        "label": "link color",
        "default": "#CF7D31"
      }
    ]

  }
{% endschema %}