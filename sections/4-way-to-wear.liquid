<section class="w-full flex justify-center pb-8" style="background-color: {{ section.settings.bg-color }};">

  <div class="max-w-2xl h-full items-center ">
    <div class="text-center">
      <h1 class="text-3xl font-bold py-14" style="font-family:{{ section.settings.font_family }}">
        {{ section.settings.heading }}</h1>
    </div>

    <div class="items-center">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url }}" width="" height="" alt="." />
      {% else %}
        {{ 'product-2' | placeholder_svg_tag }}
      {% endif %}
    </div>

    <div class="grid grid-cols-4 justify-items-center py-6 w-full text-start">

      <div>
        <a class="title-responsive" href="{{ section.settings.text_1_url }}" style="font-family:{{ section.settings.font_family }}">{{ section.settings.title_1 }}</a>
      </div>
      <div>
        <a class="title-responsive" href="{{ section.settings.text_2_url }}" style="font-family:{{ section.settings.font_family }}">{{ section.settings.title_2 }}</a>
      </div>
      <div>
        <a class="title-responsive" href="{{ section.settings.text_3_url }}" style="font-family:{{ section.settings.font_family }}">{{ section.settings.title_3 }}</a>
      </div>
      <div>
        <a class="title-responsive" href="{{ section.settings.text_4_url }}" style="font-family:{{ section.settings.font_family }}">{{ section.settings.title_4 }}</a>
      </div>

    </div>
  </div>
</section>


<style>

.title-responsive {
  font-weight: 500;
  text-transform: uppercase;
  text-decoration: underline;
  color: black;
  font-size: clamp(7px, 2.2vw, 15px);
  transition: 0.3s ease;
}

.title-responsive:hover {
  transform: scale(1); 
  letter-spacing: .5px; 
}


</style>


{% schema %}
  {
    "name": "parts of glasess",
    "settings": [
      {
        "type": "color",
        "id": "bg-color",
        "label": "Baground color",
        "default": "#EAEAEA"
      },
      {
  "type": "select",
  "id": "font_family",
  "label": "Font Family",
  "options": [
    { "value": "Outfit", "label": "Outfit" },
    { "value": "Poppins", "label": "Poppins" },
    { "value": "Inter", "label": "Inter" },
    { "value": "Roboto", "label": "Roboto" },
    { "value": "Montserrat", "label": "Montserrat" },
    { "value": "Lato", "label": "Lato" }
  ],
  "default": "Outfit"
},
      {
        "type": "text",
        "id": "heading",
        "label": "heading",
        "default": "4 Ways to Wear"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "upload image"
      },
      {
        "type": "text",
        "id": "title_1",
        "label": "title 1",
        "default": "SUNGLASESS"
      },{
        "type": "url",
        "id": "text_1_url",
        "label":"text 1 url"
      },
      {
        "type": "text",
        "id": "title_2",
        "label": "title 2",
        "default": "PRESCRIPTION"
      },
      {
        "type": "url",
        "id": "text_2_url",
        "label":"text 2 url"
      }, {
        "type": "text",
        "id": "title_3",
        "label": "title 3",
        "default": "SUNGLASESS"
      },
      {
        "type": "url",
        "id": "text_3_url",
        "label":"text 3 url"
      }, {
        "type": "text",
        "id": "title_4",
        "label": "title 4",
        "default": "EYEGLASSES READERS"
      },{
        "type": "url",
        "id": "text_4_url",
        "label":"text 4 url"
      },
    ]
  }
{% endschema %}