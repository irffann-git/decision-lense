<footer class="footer-slope flex justify-center fixed-footer relative bg-[#070B13] text-white mt-20 pt-6 pb-4">
<div class="max-w-5xl">
  <div class="max-w-7xl mx-auto grid grid-col-1 md:grid-cols-3 lg:grid-cols-3 gap-4 px-6">

    <!-- COLUMN 1 — LOGO + ADDRESS -->
    <div class=" flex py-4 flex-col items-center md:items-start">
  <div>

    {% if section.settings.footer_logo != blank %}
      
      <img src="{{ section.settings.footer_logo | image_url: width: 240 }}" width="160" height="70" alt="Logo" class="mb-5">
    {% else %}
      <img src="{{ 'logo (3).png' | asset_url }}" width="160" height="70" alt="Logo" class="mb-3">
    {% endif %}

    {% if section.settings.address != blank %}
      <p class="text-xs text-white">{{ section.settings.address | newline_to_br }}</p>
    {% endif %}

    {% if section.settings.phone != blank %}
      <p class="text-xs text-white">{{ section.settings.phone | newline_to_br }}</p>
    {% endif %}

    <div class="flex gap-3 mt-7">
      {% if section.settings.facebook_url != blank %}
        <a href="{{ section.settings.facebook_url }}" class="border border-gray-100 rounded-full p-1 hover:border-yellow-500 hover:text-yellow-500 transition">{% render 'icon-facebook' %}</a>
      {% endif %}
      {% if section.settings.linkedin_url != blank %}
        <a href="{{ section.settings.linkedin_url }}" class="border border-gray-100 rounded-full p-1 hover:border-yellow-500 hover:text-yellow-500 transition">{% render 'icon-linkdin' %}</a>
      {% endif %}
      {% if section.settings.twitter_url != blank %}
        <a href="{{ section.settings.twitter_url }}" class="border border-gray-100 rounded-full p-1 hover:border-yellow-500 hover:text-yellow-500 transition">{% render 'icon-twitter' %}</a>
      {% endif %}
      {% if section.settings.youtube_url != blank %}
        <a href="{{ section.settings.youtube_url }}" class="border border-gray-100 rounded-full p-1 hover:border-yellow-500 hover:text-yellow-500 transition">{% render 'icon-youtube' %}</a>
      {% endif %}
    </div>

  </div>
</div>

<div class="flex space-x-5 justify-center py-4">
    <!-- COLUMN 2 — SUPPORT -->
    <div class="space-y-1 flex flex-col items-start">
  <h3 class="font-semibold mb-2">{{ section.settings.support_title }}</h3>

  <ul class="footer-list space-y-2 text-xs text-white flex flex-col items-start">
    {% if section.settings.support_1_text != blank %}
      <li><a href="{{ section.settings.support_1_url }}" class="hover:text-yellow-500">{{ section.settings.support_1_text }}</a></li>
    {% endif %}
    {% if section.settings.support_2_text != blank %}
      <li><a href="{{ section.settings.support_2_url }}" class="hover:text-yellow-500">{{ section.settings.support_2_text }}</a></li>
    {% endif %}
    {% if section.settings.support_3_text != blank %}
      <li><a href="{{ section.settings.support_3_url }}" class="hover:text-yellow-500">{{ section.settings.support_3_text }}</a></li>
    {% endif %}
    {% if section.settings.support_4_text != blank %}
      <li><a href="{{ section.settings.support_4_url }}" class="hover:text-yellow-500">{{ section.settings.support_4_text }}</a></li>
    {% endif %}
    {% if section.settings.support_5_text != blank %}
      <li><a href="{{ section.settings.support_5_url }}" class="hover:text-yellow-500">{{ section.settings.support_5_text }}</a></li>
    {% endif %}
  </ul>
</div>



    <!-- COLUMN 3 — PRODUCTS -->
    <div class="space-y-3 flex flex-col items-start">
  <h3 class="font-semibold mb-2">{{ section.settings.products_title }}</h3>

  <ul class="footer-list space-y-2 text-xs text-white flex flex-col items-start">
    

    {% if section.settings.product_1_text != blank %}
      <li><a href="{{ section.settings.product_1_url }}" class="hover:text-yellow-500">{{ section.settings.product_1_text }}</a></li>
    {% endif %}

    {% if section.settings.product_2_text != blank %}
      <li><a href="{{ section.settings.product_2_url }}" class="hover:text-yellow-500">{{ section.settings.product_2_text }}</a></li>
    {% endif %}

    {% if section.settings.product_3_text != blank %}
      <li><a href="{{ section.settings.product_3_url }}" class="hover:text-yellow-500">{{ section.settings.product_3_text }}</a></li>
    {% endif %}

    {% if section.settings.product_4_text != blank %}
      <li><a href="{{ section.settings.product_4_url }}" class="hover:text-yellow-500">{{ section.settings.product_4_text }}</a></li>
    {% endif %}

    {% if section.settings.product_5_text != blank %}
      <li><a href="{{ section.settings.product_5_url }}" class="hover:text-yellow-500">{{ section.settings.product_5_text }}</a></li>
    {% endif %}

  </ul>
</div>

</div>
    <!-- COLUMN 4 — NEWSLETTER -->
    <div class="space-y-3 flex flex-col py-4 items-center md:items-start">
  <h3 class="font-semibold mb-2">{{ section.settings.newsletter_title }}</h3>

  {% if section.settings.newsletter_text != blank %}
    <div style="width:200px;">
    <p class="text-xs leading-6 text-white">{{ section.settings.newsletter_text }}</p>
</div>
  {% endif %}

 {% form 'customer', id: 'footer-newsletter' %}

  <div class="flex flex-col gap-2 md:flex-row">
    <input type="text"
      name="contact[name]"
      placeholder="Name"
      class="w-full px-3 py-2  bg-white text-black text-sm outline-none placeholder-gray-400">

    <input type="email"
      name="contact[email]"
      placeholder="Email"
      required
      class="w-full px-3 py-2  bg-white text-black text-sm outline-none placeholder-gray-400">
  </div>

  <button type="submit"
    class="w-full transition text-sm text-white py-2  mt-3"style="background-color:#F7AA35;">
    {{ section.settings.newsletter_button }}
  </button>

  {% if form.posted_successfully? %}
    <p class="news-succ">Thanks for subscribing!</p>
  {% endif %}

  {% if form.errors %}
    <p class="news-error">Please enter a valid email.</p>
  {% endif %}

{% endform %}


</div>


  </div>

 
  <!-- BOTTOM BAR -->
<div class="border-t mx-6 border-gray-600 pt-3">
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between text-xs text-white gap-4">

    <p class="text-xs hover:text-yellow-500">{{ section.settings.copyright }}</p>

    <div class="flex gap-6">
      <a href="#" class="hover:text-yellow-500">privacy policy</a>
      <a href="#" class="hover:text-yellow-500">privacy policy</a>
      <a href="#" class="hover:text-yellow-500">privacy policy</a>
    </div>

  </div>
</div>


</div>

</footer>

<style>
  body {
  .fixed-footer {
  width: 100%;
  position: relative;
}

.footer-slope::before {
  content: "";
  position: absolute;
  top: -35px;
  left: 0;
  width: 100%;
  height: 60px;
  background: #070B13; /* same page bg so no white gap */
  transform: skewY(-1.1deg);
}
.news-succ{
  margin-top: 10px;
  color: #00d26a;
  font-size: 14px;
  font-weight: 600;
  padding: 8px 12px;
  border-radius: 6px;
  display: inline-block;
}
.news-error {
margin-top: 10px;
  color: #ff3b3b;
  font-size: 14px;
  font-weight: 600;
  padding: 8px 12px;
  border-radius: 6px;
  display: inline-block;
}
.footer-list{
list-style:square;
padding:18px;
}
input::placeholder {
  color: #9ca3af; /* gray */
}


</style>

