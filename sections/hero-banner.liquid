<section class="w-full relative overflow-hidden" style="background-color: {{ section.settings.bg_color }}">

  <div class="max-w-8xl mx-auto flex flex-col lg:flex-row items-center gap-10 px-6 py-11 relative">

    <!-- NEW ARRIVAL IMAGE LEFT SIDE -->
    <div class="flex flex-col lg:justify-end lg:h-100 w-32 pb-6 mt-0 lg:mt-10">
      {% if section.settings.new_arrivel_img != blank %}
        <img
          src="{{ section.settings.new_arrivel_img | image_url: width: 700 }}"
          width="{{ section.settings.new_arrivel_img.width }}"
          height="{{ section.settings.new_arrivel_img.height }}"
          class="w-full h-auto"
          alt="New Arrival">

      {% else %}
        <img
          src="{{ 'new-arrival.png' | asset_url }}"
          width="300"
          height="200"
          alt="New Arrival"
          class="w-full h-auto">
      {% endif %}


    </div>

    <!-- FRAME WITH 3 STACKED IMAGES -->
    <div class="relative w-[440px] h-full px-11 py-8 flex flex-col justify-between items-center overflow-hidden max-sm:w-full max-sm:h-auto max-sm:py-8 border-[8px] border-white" style="background-color: {{ section.settings.banner_image_bg_color }};">

      {% if section.settings.main_image_1 != blank %}
        <img
          src="{{ section.settings.main_image_1 | image_url: width: 700 }}"
          width="{{ section.settings.main_image_1.width }}"
          height="{{ section.settings.main_image_1.height }}"
          class=" object-contain -ml-20"
          alt="Image 1">
      {% else %}
        {{ 'product-3' | placeholder_svg_tag: 'object-contain' }}
      {% endif %}

      {% if section.settings.main_image_2 != blank %}
        <img
          src="{{ section.settings.main_image_2 | image_url: width: 700 }}"
          width="{{ section.settings.main_image_2.width }}"
          height="{{ section.settings.main_image_2.height }}"
          class="object-contain -mr-20"
          alt="Image 2">
      {% else %}
        {{ 'product-3' | placeholder_svg_tag: 'object-contain' }}
      {% endif %}

      {% if section.settings.main_image_3 != blank %}
        <img
          src="{{ section.settings.main_image_3 | image_url: width: 700 }}"
          width="{{ section.settings.main_image_3.width }}"
          height="{{ section.settings.main_image_3.height }}"
          class="object-contain -ml-20"
          alt="Image 3">
      {% else %}
        {{ 'product-3' | placeholder_svg_tag: 'object-contain' }}
      {% endif %}

    </div>


    <!-- RIGHT SIDE TEXT -->
    <div class="flex flex-col gap-6 max-w-[450px] lg:-mr-20 text-white text-center lg:text-left">

      {% if section.settings.small_text != blank %}
        <p class="text-md italic {{ section.settings.small_text_font_style }}">{{ section.settings.small_text }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class=" leading-tight" style="font-size: {{ section.settings.heading_font_size }}px; font-family:{{ section.settings.main_text_font_style }}">
          {{ section.settings.heading | newline_to_br }}
        </h2>


      {% endif %}

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="group flex items-center gap-4 justify-center lg:justify-start font-semibold md:items-center tracking-wide">
          <span class="text-white uppercase text-lg">{{ section.settings.button_label }}</span>

          <span
            class="w-[50px] h-[50px] rounded-full flex items-center justify-center 
         transition-all duration-300 transform"
            style="
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_icon_color }};
  "
            onmouseover="
    this.style.backgroundColor='{{ section.settings.button_hover_color }}';
    this.style.color='{{ section.settings.button_icon_hover_color }}';
    this.style.transform='translateX(8px)';
  "
            onmouseout="
    this.style.backgroundColor='{{ section.settings.button_bg_color }}';
    this.style.color='{{ section.settings.button_icon_color }}';
    this.style.transform='translateX(0px)';
  ">
            {% render 'icon-arrow-right' %}
          </span>


        </a>
      {% endif %}

    </div>

    <!-- FLOATING PLANT IMAGE FOR DESKTOP -->
    {% if section.settings.plant_image != blank %}
      <img
        src="{{ section.settings.plant_image | image_url: width: 1000 }}"
        width="{{ section.settings.plant_image.width }}"
        height="{{ section.settings.plant_image.height }}"
        alt="Plant Illustration"
        class="hidden lg:block absolute right-0 bottom-0 pb-6 pe-6 max-w-[480px] pointer-events-none opacity-90">

    {% endif %}

  </div>

  <!-- PLANT IMAGE FOR MOBILE UNDER BANNER -->
  {% if section.settings.plant_image != blank %}
    <img
      src="{{ section.settings.plant_image | image_url: width: 900 }}"
      width="{{ section.settings.plant_image.width }}"
      height="{{ section.settings.plant_image.height }}"
      alt="Plant Illustration"
      class="block lg:hidden mx-auto w-full max-w-[350px] opacity-90">
  {% endif %}
</section>


<style>
  .font-playfair {
    font-family: "Playfair Display"
    , serif;
  }

</style>


{% schema %}
  {
    "name": "Hero Banner",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#CF7D31"
      },
      {
        "type": "color",
        "id": "banner_image_bg_color",
        "label": "Left Banner bg color",
        "default": "#FAE6CB"
      },
      {
        "type": "image_picker",
        "id": "new_arrivel_img",
        "label": "new arrivel image"
      },
      {
        "type": "image_picker",
        "id": "plant_image",
        "label": "Plant Illustration Image"
      }, {
        "type": "image_picker",
        "id": "main_image_1",
        "label": "Product Image 1"
      }, {
        "type": "image_picker",
        "id": "main_image_2",
        "label": "Product Image 2"
      }, {
        "type": "image_picker",
        "id": "main_image_3",
        "label": "Product Image 3"
      }, {
        "type": "text",
        "id": "small_text",
        "label": "Small Subtitle",
        "default": "Standard collection for urban lifestyle."
      }, {
        "type": "select",
        "id": "small_text_font_style",
        "label": "Font Style",
        "default": "font-normal",
        "options": [
          {
            "value": "font-normal",
            "label": "Normal"
          },
          {
            "value": "font-bold",
            "label": "Bold"
          },
          {
            "value": "font-playfair",
            "label": "Playfair Display"
          },
          {
            "value": "font-poppins",
            "label": "Poppins"
          }, {
            "value": "font-montserrat",
            "label": "Montserrat"
          }
        ]
      }, {
        "type": "text",
        "id": "heading",
        "label": "Main Heading",
        "default": "Chiffon top stylish specs in 2023"
      }, {
        "type": "select",
        "id": "main_text_font_style",
        "label": "Font Family",
        "options": [
          {
            "value": "Outfit",
            "label": "Outfit"
          },
          {
            "value": "Poppins",
            "label": "Poppins"
          },
          {
            "value": "Inter",
            "label": "Inter"
          },
          {
            "value": "Roboto",
            "label": "Roboto"
          }, {
            "value": "Montserrat",
            "label": "Montserrat"
          }, {
            "value": "Lato",
            "label": "Lato"
          }
        ],
        "default": "Outfit"
      }, {
        "type": "range",
        "id": "heading_font_size",
        "label": "Heading Font Size",
        "min": 20,
        "max": 80,
        "step": 2,
        "unit": "px",
        "default": 40
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button Text",
        "default": "SHOP NOW"
      }, {
        "type": "color",
        "id": "button_bg_color",
        "label": "Button Background Color",
        "default": "#F5B32C"
      }, {
        "type": "color",
        "id": "button_hover_color",
        "label": "Button Hover Color",
        "default": "#000000"
      }, {
        "type": "color",
        "id": "button_icon_color",
        "label": "Icon Color",
        "default": "#1F2937"
      }, {
        "type": "color",
        "id": "button_icon_hover_color",
        "label": "Icon Hover Color",
        "default": "#F5B32C"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Hero Banner"
      }
    ]
  }
{% endschema %}