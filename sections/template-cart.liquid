{% if cart.item_count > 0 %}

  <section class="px-4 py-10 bg-white">
    <div class="max-w-6xl mx-auto">

      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <h1 class="text-4xl font-extrabold text-gray-900">Your Cart</h1>
        <a href="{{ routes.all_products_collection_url }}" class="text-yellow-600 font-semibold hover:text-black transition">
          Continue Shopping →
        </a>
      </div>

      <form
        action="{{ routes.cart_url }}"
        method="POST"
        novalidate
        class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- Cart Items -->
        <div class="lg:col-span-2 space-y-6">

          {% for item in cart.items %}
            <div class="border-2 border-gray-200 rounded-xl p-4 flex gap-4">

              <a href="{{ item.url }}">
                {% if item.image %}
                  <img
                    src="{{ item.image | img_url: 'medium' }}"
                    alt="{{ item.title }}"
                    width=""
                    height=""
                    class="w-24 h-24 object-cover rounded-lg border">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'w-24 h-24 border' }}
                {% endif %}
              </a>

              <div class="flex flex-col justify-between w-full">
                <div>
                  <a href="{{ item.url }}" class="text-lg font-semibold hover:underline">{{ item.product.title }}</a>
                  <p class="text-gray-500 text-sm">{{ item.variant.title }}</p>
                </div>

                <div class="flex items-center justify-between mt-2">
                    <!-- Quantity -->
                  <input
                    type="number"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="1"
                    class="w-20 border p-2 rounded">

                  <!-- Price -->
                  <p class="font-semibold text-lg text-gray-800">{{ item.line_price | money }}</p>
                </div>

                <!-- Remove -->
                <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0" class="text-red-500 text-sm font-medium hover:underline mt-2">
                  Remove
                </a>
              </div>
            </div>
          {% endfor %}

          <textarea
            name="note"
            placeholder="Order notes"
            class="w-full h-24 border rounded-lg p-3"></textarea>
        </div>

        <!-- Summary -->
        <div class="border-2 border-yellow-600 rounded-xl p-6 h-fit sticky top-5 bg-white shadow-lg">
          <h2 class="text-2xl font-bold text-gray-800 mb-4">Order Summary</h2>

          <div class="flex justify-between text-lg font-medium mb-6">
            <span>Subtotal:</span>
            <span>{{ cart.total_price | money }}</span>
          </div>

          <button
            type="submit"
            name="update"
            class="w-full py-3 mb-3 rounded-md border-2 border-yellow-600 bg-white font-semibold hover:bg-yellow-600 hover:text-black transition">
            Update Cart
          </button>

          <button
            type="submit"
            name="checkout"
            class="w-full py-3 rounded-md bg-yellow-600 font-semibold text-black hover:bg-black hover:text-yellow-600 transition">
            Checkout →
          </button>
        </div>

      </form>
    </div>
  </section>

{% else %}

  <section class="h-96 flex items-center justify-center text-center">
    <div>
      <h1 class="text-3xl font-bold mb-6">Your cart is empty</h1>
      <a href="{{ routes.all_products_collection_url }}" class="px-8 py-3 rounded-md bg-yellow-600 text-black font-semibold hover:bg-black hover:text-yellow-600 transition">
        Continue Shopping
      </a>
    </div>
  </section>

{% endif %}


{% schema %}
  {
    "name": "Template Cart",
    "blocks": [
      {
        "type": "subtotal",
        "name": "Subtotal",
        "limit": 1
      }, {
        "type": "update_button",
        "name": "Update Button",
        "limit": 1
      }, {
        "type": "checkout_button",
        "name": "Checkout Button",
        "limit": 1
      }
    ]
  }
{% endschema %}