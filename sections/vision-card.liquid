<section class="py-16">
  <div class="max-w-7xl mx-auto px-6">

    <!-- Heading -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl mb-2 font-semibold" style="color:{{ section.settings.heading_color }};font-Family:{{ section.settings.font_family }}">
        {{ section.settings.heading }}
      </h2>
      <p class="mt-2 font-bold letter-space text-base md:text-lg" style="color:{{ section.settings.sub_heading_color }}; font-Family:{{ section.settings.font_family }}">
        {{ section.settings.sub_heading }}
      </p>
    </div>

    <!-- Mobile / Tablet → SLIDER -->
    <div class="swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide px-4">
            <div class="flex flex-col items-center text-center space-y-4">
              <img
                src="{{ block.settings.card_image | image_url: width: 1000 }}"
                class="rounded-md w-full h-[420px] object-cover"
                width=""
                height=""
                alt="" />
              <h3 class="text-xl font-semibold">{{ block.settings.card_title }}</h3>
              <p class="text-gray-600 text-sm max-w-xs mx-auto">
                {{ block.settings.card_description }}
              </p>

              {% if block.settings.button_label != blank %}
                <a href="{{ block.settings.button_link }}" class="mt-2 border border-gray-800 rounded-md px-6 py-2 text-sm hover:bg-black hover:text-white transition">
                  {{ block.settings.button_label }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>


    <!-- Desktop → 3 Column Grid -->
    <div class="desktop-grid grid grid-cols-3 gap-7">

      {% for block in section.blocks %}
        <div class="flex flex-col items-center text-center space-y-2">
          <img
            src="{{ block.settings.card_image | image_url: width: 1000 }}"
            class=" w-full h-full mb-4 object-cover"
            height=""
            width=""
            alt="" />
          <h3 class="text-3xl font-semibold" style="font-Family:{{ block.settings.font_family2 }}">{{ block.settings.card_title }}</h3>
          <p class="text-black text-sm max-w-xs mx-auto">
            {{ block.settings.card_description }}
          </p>

          {% if block.settings.button_label != blank %}
            <a href="{{ block.settings.button_link }}" class="mt-2 border border-gray-800 rounded-md px-14 py-3 text-sm hover:bg-black hover:text-white transition" style="font-Family:{{ block.settings.font_family2 }}">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Hide swiper slider on screens 768px and above */
  @media (min-width: 768px) {
    .swiper {
      display: none !important;
    }
  }

  /* Hide desktop grid on small screens */
  @media (max-width: 767px) {
    .desktop-grid {
      display: none !important;
    }
  }
</style>


<!-- Swiper Initialization -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js" defer></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".swiper", {
      loop: true,
      spaceBetween: 20,
      autoplay: {
        delay: 2500,
        disableOnInteraction: false,
      },
      breakpoints: {
        0: { slidesPerView: 1 },      
        640: { slidesPerView: 1.15 }, 
        1024: { slidesPerView: 3 }, 
      }
    });
  });
</script>


