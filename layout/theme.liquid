<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">

    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Lato:wght@300;400;700&family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@300;400;500;600;700&family=Outfit:wght@200;300;400;500;600;700;800&family=Roboto:wght@300;400;500;700&family=Playfair+Display:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">


    <style>
      .font-playfair {
        font-family: 'Playfair Display'
        , serif;
      }
    </style>
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    {{ content_for_header }}

    {{ 'application.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'application.js' | asset_url }}" defer></script>
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>

    <style>
      [x-cloak] {
        display: none !important;
      }
    </style>
  </head>

  <body>

    {% section 'announsment-bar' %}


    {% section 'header' %}

    <main role="main">
      {{ content_for_layout }}

    </main>

    {% section 'footer' %}


    <script src="{{ 'wishlist.js' | asset_url }}" defer></script>
    <script src="{{ 'wishlist-page.js' | asset_url }}" defer></script>


  </body>
</html>